{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": "./src",
        "paths": {
            "@Components/*": ["./components/*"],
            "@Modules/*": ["./modules/*"],
            "@Styles/*": ["./styles/*"],
            "@Layouts/*": ["./layouts/*"],
            "@Types/*": ["./types/*"],
            "@Hooks/*": ["./hooks/*"]
        }
    }
}
